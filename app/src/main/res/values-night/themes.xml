<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PlayMate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ActionBar'ı devre dışı bırak -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Ana Renkler (daha koyu ve derin tonlar) -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/eminence</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Yardımcı Renkler -->
        <item name="colorSecondary">@color/sky_magenta</item>
        <item name="colorSecondaryVariant">@color/wisteria</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Durum çubuğu rengi -->
        <item name="android:statusBarColor">@color/eminence</item>


    </style>
</resources>
