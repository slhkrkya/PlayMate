<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PlayMate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ActionBar'ı devre dışı bırak -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Ana Renkler (daha yumuşak tonlar) -->
        <item name="colorPrimary">@color/lapis_lazuli</item>
        <item name="colorPrimaryVariant">@color/light_coral</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Yardımcı Renkler -->
        <item name="colorSecondary">@color/keppel</item>
        <item name="colorSecondaryVariant">@color/turquoise</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Durum çubuğu rengi -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Opsiyonel: Pencere arka planı -->
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>
</resources>
