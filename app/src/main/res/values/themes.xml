<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Mode Teması -->
    <style name="Theme.PlayMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Arka Plan Renkleri -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/eminence</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Yardımcı Renkler -->
        <item name="colorSecondary">@color/sky_magenta</item>
        <item name="colorSecondaryVariant">@color/wisteria</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Durum Çubuğu -->
        <item name="android:statusBarColor">@color/dark_purple</item>

        <!-- Arka Plan -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

    <!-- Açık metin rengi -->
    <style name="ProfileText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Light mode için koyu arkaplanda parlak buton -->
    <style name="PrimaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/sky_magenta</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

</resources>
