<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Uygulama Teması -->
    <style name="Theme.PlayMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Ana Renkler -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/eminence</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Yardımcı Renkler -->
        <item name="colorSecondary">@color/sky_magenta</item>
        <item name="colorSecondaryVariant">@color/wisteria</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Durum Çubuğu Rengi -->
        <item name="android:statusBarColor">@color/eminence</item>

        <!-- Arka Plan (Gradient varsa drawable kullanılır) -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

    <!-- Profil ekranı için ortak TextView stili -->
    <style name="ProfileText">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Ana Buton stili -->
    <style name="PrimaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/eminence</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>
</resources>
