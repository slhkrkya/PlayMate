<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Uygulama Teması -->
    <style name="Theme.PlayMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Ana Renkler -->
        <item name="colorPrimary">@color/light_coral</item>
        <item name="colorPrimaryVariant">@color/lapis_lazuli</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Yardımcı Renkler -->
        <item name="colorSecondary">@color/keppel</item>
        <item name="colorSecondaryVariant">@color/turquoise</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Durum Çubuğu Rengi -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Pencere Arka Planı -->
        <item name="android:windowBackground">@drawable/bg_wave_vector_playmate</item>
    </style>

    <!-- Profil ekranı için ortak TextView stili -->
    <style name="ProfileText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Ana Buton stili -->
    <style name="PrimaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/keppel</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>
</resources>
